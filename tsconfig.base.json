{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,

    "verbatimModuleSyntax": false,

    "module": "preserve",

    "lib": [
      "es2022"
    ],
    "outDir": "./lib"
  }
}
